<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cryptoDetailMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/crypto_detail_app_bar"/>

    <include
        android:id="@+id/priceLayout"
        layout="@layout/crypto_detail_price_item"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/cryptoChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/addToFavoritesButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="32dp"
        android:text="@string/crypto_detail_add_favorites_button_text"
        android:visibility="gone"/>

    <Button
        android:id="@+id/removeFromFavoritesButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="32dp"
        android:text="@string/crypto_detail_remove_from_favorites_button_text"
        android:visibility="gone"/>
</androidx.appcompat.widget.LinearLayoutCompat>